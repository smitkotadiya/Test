<?xml version="1.0" encoding="UTF-8"?>
<suite name="Social Tables Automation - Team Settings Module" verbose="10" parallel="false" thread-count="1">

	<!-- Put IP of localhost/Grid Hub machine -->
	<parameter name="selenium.host" value="localhost" />

	<!-- Put Port of localhost RC/Grid Hub machine -->
	<parameter name="selenium.port" value="4444" />

	<!-- Put target browser name as below: 1) Firefox : firefox 2) chrome : 
		chrome 3) IExplorer : ie8 / ie9 -->
	

	<!-- @NOTE: 1) Un-comment <test> tag to run respective test. 2) Comment 
		<test> tag to unrun respective test. -->
	<parameter name="selenium.browser" value="firefox" />
	<parameter name="selenium.url" value="https://dev.socialtables.com/" />
 
  <test 	name="To verify 'Add Custom Category' functionality..">
	<classes>
		<class
			name="com.socialTables.teamSettings.Index.TeamSettingIndex">
			<methods>
				<include name="createEventCategoryFunctionality" />
			</methods>
		</class>
	</classes>
</test> 

<test 	name="To verify 'Delete' functionality in Event Categories.">
	<classes>
		<class
			name="com.socialTables.teamSettings.Index.TeamSettingIndex">
			<methods>
				<include name="deleteEventCategoryFunctionality" />
			</methods>
		</class>
	</classes>
</test>

</suite>